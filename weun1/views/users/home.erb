<% sessionid = session[:id]
@user = User.find(sessionid) 
@stories = Story.where(user_id: Story.pluck(:user_id))
 %>
Welcome <%= @user.first %>! Session ID: <%= session[:id] %><br>
<h3>Stories</h3>
<ul class="collection">
 <% @stories = @stories.order(created_at: :desc)
   @stories.each do |story| 
    @user = User.find(story.user_id)
    @avatar = Avatar.find(story.user_id)%>
    <li class="collection-item avatar">
     <span class="title"> <img src=<%= if @avatar.bravery == true and @avatar.power == true and @avatar.determination == true then ("https://static.cdprojektred.com/playgwent.com/news/big/playgwent.com_en_1535708549_5b890d852fb152.36885555.jpg") elsif @avatar.bravery == true and @avatar.power == true and @avatar.kind == true then ("https://pbs.twimg.com/profile_images/913100879204556800/Ou9CxY1c_400x400.jpg") elsif @avatar.bravery == true and @avatar.power == true and @avatar.funny == true then ("http://starsmedia.ign.com/stars/image/object/142/14230966/hector_fire-emblem_pictureboxart_160w.jpg") elsif @avatar.bravery == true and @avatar.determination == true and @avatar.kind == true then ("https://fireemblemwiki.org/w/images/2/21/FEFT_Roy.png") elsif @avatar.bravery == true and @avatar.determination == true and @avatar.funny == true then ("https://static.tvtropes.org/pmwiki/pub/images/papyrus16.png") elsif @avatar.bravery == true and @avatar.kind == true and @avatar.funny == true then ("https://purewows3.imgix.net/images/articles/2018_01/barney_kids_tv_show_personalities.jpg?auto=format,compress&cs=strip") elsif @avatar.power == true and @avatar.determination == true and @avatar.kind == true then ("http://pm1.narvii.com/6959/d27770c376c5f74e27c18d7788efc002c71c50c1r1-1016-1064v2_00.jpg") elsif @avatar.power == true and @avatar.determination == true and @avatar.funny == true then ("https://t0.rbxcdn.com/daf49238081c4cb960c14daac9a73cbd") elsif @avatar.power == true and @avatar.kind == true and @avatar.funny == true then ("http://www.todayifoundout.com/wp-content/uploads/2017/11/santa.jpg") elsif @avatar.determination == true and @avatar.kind == true and @avatar.funny == true then ("https://www.ssbwiki.com/images/a/a6/Lucas.png") else "https://vignette.wikia.nocookie.net/ultimate-pokemon-fanon/images/8/85/Missingno_drawing_by_aerostat-d4krmly.jpg/revision/latest?cb=20130916223342" end%> style="width:100px;height:100px;"></p>
